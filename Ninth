<script>
  const backdropMain = document.getElementById('backdrop-main');
  const loveYouBackdrop = document.getElementById('loveYouBackdrop');
  const missYouBackdrop = document.getElementById('missYouBackdrop');

  const loveYouBtn = document.getElementById('loveYouBtn');
  const missYouBtn = document.getElementById('missYouBtn');
  const loveYouCloseBtn = document.getElementById('loveYouCloseBtn');
  const missYouCloseBtn = document.getElementById('missYouCloseBtn');

  // Focus on main modal content on load for accessibility
  window.onload = () => {
    loveYouBtn.focus();
  };

  // "I love you" button opens loveYou modal and hides main
  loveYouBtn.addEventListener('click', () => {
    backdropMain.classList.add('hidden');
    loveYouBackdrop.classList.remove('hidden');
    // Focus close button for accessibility
    loveYouCloseBtn.focus();
  });

  // "I miss you" button opens missYou modal and hides main
  missYouBtn.addEventListener('click', () => {
    backdropMain.classList.add('hidden');
    missYouBackdrop.classList.remove('hidden');
    // Focus close button for accessibility
    missYouCloseBtn.focus();
  });

  // Close loveYou modal
  loveYouCloseBtn.addEventListener('click', () => {
    loveYouBackdrop.classList.add('hidden');
    backdropMain.classList.remove('hidden');
    loveYouBtn.focus();
  });

  // Close missYou modal
  missYouCloseBtn.addEventListener('click', () => {
    missYouBackdrop.classList.add('hidden');
    backdropMain.classList.remove('hidden');
    missYouBtn.focus();
  });

  // Close modal on pressing Escape
  window.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') {
      // Close currently visible modal(s)
      if (!backdropMain.classList.contains('hidden')) {
        backdropMain.style.display = 'none';
      } else if (!loveYouBackdrop.classList.contains('hidden')) {
        loveYouBackdrop.classList.add('hidden');
        backdropMain.classList.remove('hidden');
        loveYouBtn.focus();
      } else if (!missYouBackdrop.classList.contains('hidden')) {
        missYouBackdrop.classList.add('hidden');
        backdropMain.classList.remove('hidden');
        missYouBtn.focus();
      }
    }
  });

  // Disable window buttons (they are just visuals)
  document.querySelectorAll('.window-btn').forEach(btn => {
    btn.addEventListener('click', e => e.preventDefault());
  });
</script>
</body>
